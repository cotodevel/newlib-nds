export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH



all :	buildtoolchain
	

buildtoolchain:	
	-wget	-O	$(CURDIR)/../installer/linux/toolchain.zip https://bitbucket.org/Coto88/packages/get/da009a7bfeacc96e0bbe5bf49a498cf9692cec6c.zip	
	-7z	x	$(CURDIR)/../installer/linux/toolchain.zip	-o$(CURDIR)/../installer/linux/
	-tar	xf		$(CURDIR)/../installer/linux/Coto88-packages-da009a7bfeac/newlib-nds-packages/arm-none-eabi-gcc/gcc-arm-none-eabi-4_9-2015q3-20150921-linux.tar.bz2	-C $(CURDIR)/../installer/linux/Coto88-packages-da009a7bfeac/newlib-nds-packages/arm-none-eabi-gcc/
	-chmod a+x -R	$(CURDIR)/../installer/linux/Coto88-packages-da009a7bfeac/newlib-nds-packages/arm-none-eabi-gcc/
	-sudo cp	-a	$(CURDIR)/../installer/linux/Coto88-packages-da009a7bfeac/newlib-nds-packages/arm-none-eabi-gcc/gcc-arm-none-eabi-4_9-2015q3/.	/usr/arm-none-eabi/

clean:
	-sudo rm	-fr	/usr/arm-none-eabi/
	-@rm -fr	$(CURDIR)/toolchain.zip
	-@rm -fr	$(CURDIR)/../installer/linux/Coto88-packages-da009a7bfeac/
